{
	"extends": "astro/tsconfigs/base",
	"compilerOptions": {
		"module": "ES2020",
		"allowImportingTsExtensions": true,
		"noEmit": true,
		"types": ["astro/client"],
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@components/*": ["src/components/*"],
			"@layouts/*": ["src/layouts/*"],
			"@pages/*": ["src/pages/*"]
		},
		"jsx": "react-jsx",
		"jsxImportSource": "react"
	},
	"include": ["src", "astro.config.*"]
}
