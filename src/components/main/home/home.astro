---
import { LetterGlitch } from '@/components/react/LetterGlitch';
import { Specializations } from '@/components/react/Specializations';
import TechSlider from '@/components/ui/techSlider.astro';
import { socialLinks } from '@/constants/constants';
---

<section class='text-[var(--white)] mt-12 md:mt-0' id='home'>
	<div class='max-w-5xl mx-auto space-y-8 md:pt-36 pb-12'>
		<div class='text-left space-y-4'>
			<p class='text-md md:text-lg text-[var(--white-icon)] shiny-white'>Hi, I'm Paweł Urasiński</p>
			<div class='flex flex-col lg:flex-row lg:items-center space-y-4 lg:space-y-0 lg:space-x-20 md:gap-4'>
				<h1 class='text-[var(--white)] text-5xl md:text-6xl font-medium text-pretty leading-none'>
					JavaScript <br /> Developer
				</h1>
				<p class='text-md md:text-2xl text-[var(--white-icon)]'>
					Transforming ideas into interactive products for <span class='text-[var(--blue)] shiny-blue'>web</span> platforms and
					<span class='text-[var(--blue)] shiny-blue'>mobile</span> applications.
				</p>
			</div>
			<div class='flex justify-start gap-2 pt-3 md:pt-6'>
				{
					socialLinks.map(({ href, icon: Icon, label }) => (
						<a target='_blank' href={href} aria-label={label} class='btn-icon'>
							<Icon />
						</a>
					))
				}
			</div>
		</div>
		<TechSlider />
		<div class='flex flex-col items-center lg:flex-row lg:items-end gap-8'>
			<Specializations client:load />
			<div class='flex items-center justify-center h-[290px] w-full md:h-[292px] pt-4 lg:ml-16'>
				<LetterGlitch
					client:load
					glitchColors={['#4c4cff', '#7462ff', '#1a1a66']}
					glitchSpeed={33}
					centerVignette={false}
					outerVignette={true}
					smooth={true}
				/>
			</div>
		</div>
	</div>
</section>
