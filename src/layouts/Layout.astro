---
import '../styles/global.css';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta name='description' content='React & React Native Developer' />
		<meta name='viewport' content='width=device-width, initial-scale=1.0' />
		<link rel='icon' type='image/svg+xml' href='/favicon.svg' />
		<meta property='og:title' content='Paweł Urasiński' />
		<meta property='og:description' content='JavaScript Developer' />
		<!-- <meta property='og:image' content='https://oscarhernandez.vercel.app/og.image.png' /> -->
		<meta property='og:url' content='https://pawelurasinski.vercel.app/' />
		<meta property='og:type' content='website' />
		<meta property='og:site_name' content='Paweł Urasiński Portfolio' />

		<link rel='preconnect' href='https://fonts.googleapis.com' />
		<link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
		<link
			rel='preload'
			as='style'
			href='https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap'
		/>
		<link
			rel='stylesheet'
			href='https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap'
			media='print'
			onload="this.media='all'"
		/>
		<noscript>
			<link
				rel='stylesheet'
				href='https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap'
			/>
		</noscript>

		<title>{title}</title>
	</head>
	<body class='bg-[--background] md:px-44 lg:px-20 px-9'>
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--background: #101010;
		--sec: #6cd5ff;
		--white: #dfdfdf;
		--white-icon: #f3f3f398;
		--white-icon-tr: #f3f3f310;
		--container: #1a1a1a;
		--black: #1414149c;
		--line: #ffffff10;
		--pink: #ff69b4;
		--blue: #4c4cff;
	}

	* {
		font-family:
			'montserrat',
			-apple-system,
			system-ui,
			sans-serif;
		box-sizing: border-box;
		padding: 0;
		margin: 0;
		scrollbar-width: thin;
		scrollbar-color: var(--line) var(--container);
	}

	*::selection {
		background-color: var(--blue);
		color: var(--background);
	}

	/* Scrollbar styles */

	::-webkit-scrollbar {
		width: 15px;
	}

	::-webkit-scrollbar-track {
		background: var(--container);
		border-radius: 30px;
	}

	::-webkit-scrollbar-thumb {
		background: var(--background);
		border-radius: 10px;
	}

	::-webkit-scrollbar-thumb:hover {
		background: var(--pink);
	}

	/* Scrollbar styles for Firefox */

	#home {
		scroll-margin-top: 80px;
	}
	nav {
		transform: translateX(-50%);
		background-color: var(--background);
		transition:
			background-color 0.3s ease,
			border-radius 0.3s ease,
			border-color 0.3s ease;
	}

	nav.scrolling {
		background-color: var(--component-bg);
		border-color: #ffffff10;
		border-radius: 9999px;
	}
	nav a.active .nav-indicator {
		transform: translateY(-50%) scale(1);
		opacity: 1;
		animation: pulse 1.5s cubic-bezier(0.4, 0, 0.6, 1) infinite;
	}
	@keyframes pulse {
		50% {
			opacity: 0.5;
		}
	}
	nav a.active {
		color: white;
	}
	.shiny-blue {
		background: linear-gradient(135deg, var(--blue) 25%, #eee5ff 50%, var(--blue) 75%);
		background-size: 400% 100%;
		-webkit-background-clip: text;
		background-clip: text;
		color: transparent;
		animation: shine 3s linear infinite;
	}
	@keyframes shine {
		0% {
			background-position: 100% 50%;
		}
		30%,
		70% {
			background-position: 0% 50%;
		}
	}
	@media (max-width: 767px) {
		nav {
			width: 100%;
			transform: translateX(-50%);
			bottom: 0;
			left: 50%;
			position: fixed;
			border-radius: 1rem 1rem 0 0;
			border-color: #ffffff10;
		}

		nav a.active {
			color: var(--blue);
		}

		nav.scrolling {
			border-radius: 1rem 1rem 0 0;
			background-color: var(--component-bg);
		}

		body {
			padding-bottom: 70px;
		}
	}
</style>
